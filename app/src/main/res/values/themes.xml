<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MilkyStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/orange_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/view_background</item>
        <item name="xViewBackground">@color/white</item>

        <item name="shapeAppearanceSmallComponent">@style/TheX.small</item>
        <item name="shapeAppearanceMediumComponent">@style/TheX.medium</item>
        <item name="shapeAppearanceLargeComponent">@style/TheX.large</item>
    </style>

    <style name="Theme.splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/orange_100</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


</resources>